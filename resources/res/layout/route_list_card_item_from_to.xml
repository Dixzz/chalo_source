<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_vertical" android:id="@+id/main_content_view" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/card_item_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@drawable/train_trip_planner" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <TextView android:id="@+id/card_title_from" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="From CST" android:layout_toRightOf="@+id/card_item_icon" android:layout_alignParentTop="true" style="@style/card_item_station"/>
    <TextView android:textSize="20dp" android:textColor="@color/black_87" android:layout_gravity="center_vertical" android:id="@+id/card_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="4dp" android:text="To Kuruala" android:layout_toRightOf="@+id/card_item_icon" android:layout_below="@+id/card_title_from" style="@style/card_item_station"/>
    <TextView android:id="@+id/bus_agency_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Central Railways" android:layout_toRightOf="@+id/card_title_from" style="@style/bus_route_agency"/>
</RelativeLayout>
