    <TextView android:textSize="14sp" android:textColor="#de000000" android:id="@+id/document_details_notes" android:background="@drawable/passenger_details_background" android:padding="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/passenger_details" android:layout_below="@+id/documents_header" style="@style/regularFont"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/form_passenger_type" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <View android:id="@+id/passenger_details_seperator" android:background="#eeeeee" android:layout_width="match_parent" android:layout_height="8dp" android:layout_marginTop="10dp"/>
