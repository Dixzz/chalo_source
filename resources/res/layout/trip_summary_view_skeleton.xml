<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/shimmer_view_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <View android:background="@drawable/skeleton_bone" android:layout_width="80dp" android:layout_height="20dp"/>
            <View android:background="@drawable/skeleton_bone" android:layout_width="40dp" android:layout_height="16dp" android:layout_marginLeft="20dp"/>
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
            <View android:background="@drawable/skeleton_bone" android:layout_width="40dp" android:layout_height="20dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="left" android:id="@+id/mode_info_container" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <View android:background="@drawable/skeleton_bone" android:layout_width="150dp" android:layout_height="20dp"/>
            <View android:background="@drawable/skeleton_bone" android:layout_width="40dp" android:layout_height="20dp" android:layout_marginLeft="16dp"/>
        </LinearLayout>
        <View android:background="@drawable/skeleton_bone" android:layout_width="200dp" android:layout_height="16dp" android:layout_marginLeft="16dp" android:layout_marginTop="16dp"/>
        <View android:background="@drawable/skeleton_bone" android:layout_width="120dp" android:layout_height="20dp" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
