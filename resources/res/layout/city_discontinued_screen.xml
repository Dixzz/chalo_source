<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="36dp" android:layout_marginRight="36dp" android:layout_centerInParent="true">
        <ImageView android:layout_gravity="center" android:id="@+id/status_icon" android:layout_width="wrap_content" android:layout_height="130dp" android:src="@drawable/out_of_service"/>
        <TextView android:textSize="24sp" android:textColor="@color/black_87" android:gravity="center" android:layout_gravity="center" android:id="@+id/status_copy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/city_discontinued_title" android:layout_below="@+id/status_icon" style="@style/boldFont"/>
        <TextView android:textSize="14dp" android:textColor="@color/black_60" android:gravity="center" android:layout_gravity="center" android:id="@+id/status_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="@string/city_discontinued_copy" android:layout_below="@+id/status_copy" style="@style/regularFont"/>
        <TextView android:textColor="@color/black_60" android:gravity="center" android:layout_gravity="center" android:id="@+id/explore_other_cities" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:text="@string/city_discontinued_supporting_text" style="@style/regularFont"/>
        <FrameLayout android:layout_gravity="center" android:id="@+id/btn_change_city" android:layout_width="180dp" android:layout_height="48dp" android:layout_marginTop="16dp" android:foreground="@drawable/drawer_item_selector">
            <TextView android:textColor="@color/orange_primary" android:gravity="center" android:background="@drawable/primary_stroked_rectangle" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/supported_cities" android:layout_below="@+id/section_status" style="@style/mediumFont"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
