<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/mticket_passenger_details" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:layout_below="@+id/pass_divider">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18dp" android:textColor="@color/black_87" android:id="@+id/tv_passenger_details" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@string/font_bold" style="@style/mediumFont"/>
        <TextView android:textColor="@color/view_schedule_color" android:id="@+id/edit_booking_details_mticket" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_txt_edit_mticket" style="@style/mediumFont.NormalText"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
        <TextView android:textColor="@color/black_60" android:id="@+id/tv_mticket_validity_time" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" style="@style/regularFont.NormalText"/>
        <TextView android:textSize="18dp" android:textColor="@color/black_87" android:id="@+id/tv_passenger_total_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="450" android:fontFamily="@string/font_bold" style="@style/mediumFont"/>
    </LinearLayout>
</LinearLayout>
