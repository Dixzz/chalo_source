<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/top_half_line" android:background="@color/bus_color" android:layout_width="@dimen/route_vertical_line_width" android:layout_height="match_parent" android:layout_above="@+id/center_dot" android:layout_centerInParent="true"/>
    <View android:id="@+id/center_dot" android:background="@color/bus_color" android:layout_width="@dimen/route_vertical_line_width" android:layout_height="@dimen/route_horizontal_line_height" android:layout_centerInParent="true"/>
    <View android:id="@+id/left_half_line" android:background="@color/bus_color" android:layout_width="match_parent" android:layout_height="@dimen/route_horizontal_line_height" android:layout_toLeftOf="@+id/center_dot" android:layout_centerVertical="true"/>
    <View android:id="@+id/righ_half_line" android:background="@color/bus_color" android:layout_width="match_parent" android:layout_height="@dimen/route_horizontal_line_height" android:layout_toRightOf="@+id/center_dot" android:layout_centerVertical="true"/>
    <View android:id="@+id/bottom_half_line" android:background="@color/bus_color" android:layout_width="@dimen/route_vertical_line_width" android:layout_height="match_parent" android:layout_below="@+id/center_dot" android:layout_centerInParent="true"/>
</RelativeLayout>
