<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:background="@drawable/drawer_item_selector" android:paddingLeft="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="16dp" android:layout_marginRight="8dp" android:src="@drawable/mticket_icon"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                <TextView android:textSize="18sp" android:textColor="@color/black_87" android:id="@+id/ticket_type_title" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/tag_text_ticket_type" android:layout_weight="1" style="@style/mediumFont"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="4dp">
                <ImageView android:id="@+id/route_mode_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bus_trip_planner"/>
                <TextView android:textSize="16sp" android:textColor="@color/black_87" android:layout_gravity="center_vertical" android:id="@+id/mticket_route_name" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/enter_route_number" style="@style/mediumFont"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/stop_details_layout" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_circle_start" android:layout_width="10dp" android:layout_height="10dp" android:src="@drawable/trip_planner_circle_from" app:layout_constraintBottom_toBottomOf="@+id/tv_start_stop" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="@+id/tv_start_stop"/>
                <TextView android:textSize="14sp" android:textColor="@color/black_87" android:id="@+id/tv_start_stop" android:paddingLeft="14dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Andheri eastAndheri east" app:layout_constraintLeft_toRightOf="@+id/iv_circle_start" style="@style/regularFont"/>
                <TextView android:textSize="14sp" android:textColor="@color/black_87" android:id="@+id/tv_end_stop" android:paddingLeft="14dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Vashi railways station depot" app:layout_constraintLeft_toLeftOf="@+id/tv_start_stop" app:layout_constraintTop_toBottomOf="@+id/tv_start_stop" style="@style/regularFont"/>
                <View android:id="@+id/start_end_separator" android:background="@color/black" android:layout_width="2dp" android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/iv_circle_end" app:layout_constraintEnd_toEndOf="@+id/iv_circle_start" app:layout_constraintStart_toStartOf="@+id/iv_circle_start" app:layout_constraintTop_toBottomOf="@+id/iv_circle_start"/>
                <ImageView android:id="@+id/iv_circle_end" android:layout_width="10dp" android:layout_height="10dp" android:src="@drawable/trip_planner_circle_to" app:layout_constraintBottom_toBottomOf="@+id/tv_end_stop" app:layout_constraintEnd_toEndOf="@+id/iv_circle_start" app:layout_constraintStart_toStartOf="@+id/iv_circle_start" app:layout_constraintTop_toTopOf="@+id/tv_end_stop"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView android:textSize="14sp" android:textColor="@color/black_70" android:id="@+id/tv_expiry_time" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Expires on xyz date" android:includeFontPadding="false" style="@style/regularFont"/>
            <FrameLayout android:id="@+id/btn_buy_mticket" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:foreground="@drawable/drawer_item_selector">
                <TextView android:textSize="14sp" android:textColor="@color/chalo_primary" android:gravity="center" android:id="@+id/btn_buy_mticket_text" android:background="@drawable/primary_stroked_rectangle" android:paddingLeft="18dp" android:paddingTop="6dp" android:paddingRight="18dp" android:paddingBottom="6dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_txt_book_again" style="@style/mediumFont"/>
            </FrameLayout>
        </LinearLayout>
        <ImageView android:id="@+id/mticket_settings_menu" android:background="@drawable/drawer_item_selector" android:paddingLeft="16dp" android:paddingTop="18dp" android:paddingRight="20dp" android:paddingBottom="12dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/settings_menu_icon"/>
    </LinearLayout>
</RelativeLayout>
