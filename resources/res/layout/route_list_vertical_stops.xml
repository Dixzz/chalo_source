<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/route_list_line_top" android:background="@color/bus_color" android:layout_width="@dimen/route_vertical_line_width" android:layout_height="match_parent" android:layout_marginLeft="19dp" android:layout_above="@+id/center_drawable"/>
    <View android:id="@+id/dummyView" android:layout_width="0dp" android:layout_height="0dp"/>
    <ImageView android:id="@+id/center_drawable" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="14dp" android:layout_below="@+id/dummyView"/>
    <View android:id="@+id/route_list_line_bottom" android:background="@color/bus_color" android:layout_width="@dimen/route_vertical_line_width" android:layout_height="match_parent" android:layout_marginLeft="19dp" android:layout_below="@+id/center_drawable"/>
    <ImageView android:id="@+id/top_live_view" android:layout_width="wrap_content" android:layout_height="@dimen/route_list_live_drawable_height" android:layout_marginTop="-12dp" android:src="@drawable/route_list_live_direction" android:layout_alignParentTop="true"/>
    <ImageView android:id="@+id/bottom_live_view" android:layout_width="wrap_content" android:layout_height="@dimen/route_list_live_drawable_height" android:layout_marginBottom="-12dp" android:src="@drawable/route_list_live_direction" android:layout_alignParentBottom="true"/>
</RelativeLayout>
