<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:truesdk="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/referral_tracking_toolbar" android:layout_width="match_parent" android:layout_height="@dimen/action_bar_height" style="@style/ZophopToolbarStyle.WhiteToolBar"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:textColor="@color/orange_primary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:text="@string/referral_title"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:id="@+id/phone_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
            <EditText android:theme="@style/edit_text_theme" android:textSize="18dp" android:textColor="@color/black_87" android:id="@+id/referral_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLength="10" android:layout_weight="1" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/phoneCode" style="@style/regularFont"/>
        </LinearLayout>
        <TextView android:textSize="12dp" android:textColor="@color/dark_red_color" android:id="@+id/error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/referral_error" android:layout_below="@+id/phone_edit_text" android:layout_marginStart="0dp" android:layout_alignStart="@+id/phone_edit_text"/>
    </RelativeLayout>
    <TextView android:textSize="14dp" android:textColor="@color/black_60" android:gravity="center" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="8dp" android:layout_marginRight="20dp" android:text="@string/referral_detail"/>
    <Button android:textSize="14dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/done" android:background="@drawable/green_rounded_button_otp" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="20dp" android:layout_marginTop="32dp" android:layout_marginRight="20dp" android:text="@string/done" fontPath="@string/font_medium"/>
</LinearLayout>
