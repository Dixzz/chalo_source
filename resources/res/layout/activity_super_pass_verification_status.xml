<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <ScrollView android:id="@+id/main_layout" android:background="@color/white" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="24dp">
                <ImageView android:layout_gravity="center" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/acknowledgement_pass_ticket"/>
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Headline" android:textSize="20sp" android:textColor="#de000000" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/verification_submission_title" android:textAlignment="center" style="@style/boldFont"/>
                <TextView android:textSize="14sp" android:textColor="@color/black_70" android:gravity="center" android:id="@+id/verification_time_required" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/verification_submission_time_required_copy"/>
                <TextView android:textSize="14sp" android:textColor="@color/black_70" android:gravity="center" android:id="@+id/verification_office_timings" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/verification_submission_office_timings_copy"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:elevation="4dp">
                <TextView android:textSize="18sp" android:textColor="#de000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/next_steps" style="@style/mediumFont"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
                    <TextView android:textSize="16sp" android:textColor="@color/black_87" android:gravity="center" android:layout_gravity="top" android:background="@drawable/grey_circle" android:layout_width="33dp" android:layout_height="33dp" android:text="1" style="@style/mediumFont"/>
                    <TextView android:textSize="14sp" android:textColor="@color/black_70" android:gravity="left" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/verification_submission_step_one" android:textAlignment="center" style="@style/regularFont"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
                    <TextView android:textSize="16sp" android:textColor="@color/black_87" android:gravity="center" android:layout_gravity="top" android:background="@drawable/grey_circle" android:layout_width="33dp" android:layout_height="33dp" android:text="2" style="@style/mediumFont"/>
                    <TextView android:textSize="14sp" android:textColor="@color/black_70" android:gravity="left" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/verification_submission_step_two" android:textAlignment="center" style="@style/regularFont"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
                    <TextView android:textSize="16sp" android:textColor="@color/black_87" android:gravity="center" android:layout_gravity="top" android:background="@drawable/grey_circle" android:layout_width="33dp" android:layout_height="33dp" android:text="3" style="@style/mediumFont"/>
                    <TextView android:textSize="14sp" android:textColor="@color/black_70" android:gravity="left" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="@string/verification_submission_step_three" android:textAlignment="center" style="@style/regularFont"/>
                </LinearLayout>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_ok" android:background="@drawable/activate_button" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/okay" style="@style/mediumFont"/>
                <TextView android:textSize="14sp" android:textColor="@color/black_87" android:gravity="center" android:id="@+id/btn_details" android:background="@drawable/grey_rounded_button" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/booking_details_caps" style="@style/mediumFont"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
