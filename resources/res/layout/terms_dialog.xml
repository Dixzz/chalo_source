<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingTop="24dp" android:layout_width="312dp" android:layout_height="wrap_content">
    <TextView android:textSize="18dp" android:textColor="@color/black_87" android:gravity="center" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="Terms and Conditions" style="@style/mediumFont"/>
    <ScrollView android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="false" android:layout_weight="1">
        <app.zophop.ui.views.OrderedTextList android:entries="@array/gen_instructions_arr_aictsl" android:id="@+id/list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </ScrollView>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp">
        <View android:background="@color/black_12" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
        <LinearLayout android:id="@+id/button_container" android:layout_width="match_parent" android:layout_height="56dp">
            <TextView android:textColor="@color/black_87" android:gravity="center" android:id="@+id/cancel_btn" android:background="@drawable/favorite_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="CANCEL" android:layout_weight="1" style="@style/mediumFont.LargeText"/>
            <View android:background="@color/black_12" android:layout_width="1dp" android:layout_height="match_parent"/>
            <TextView android:textColor="@color/chalo_primary" android:gravity="center" android:id="@+id/accept_btn" android:background="@drawable/favorite_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="ACCEPT" android:layout_weight="1" style="@style/mediumFont.LargeText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
