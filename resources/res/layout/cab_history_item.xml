<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:textSize="20dp" android:gravity="center" android:id="@+id/cab_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@drawable/ic_uber" android:layout_alignParentLeft="true"/>
    <TextView android:ellipsize="end" android:id="@+id/from_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:singleLine="true" android:layout_toRightOf="@+id/cab_icon" android:alpha="0.87" style="@style/mediumFont.LargeText.BlackColor"/>
    <TextView android:ellipsize="end" android:id="@+id/to_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:singleLine="true" android:layout_toRightOf="@+id/cab_icon" android:layout_below="@+id/from_location" android:alpha="0.87" style="@style/regularFont.NormalText.BlackColor"/>
    <TextView android:textColor="@color/action_bar_color" android:id="@+id/status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/cab_icon" android:layout_below="@+id/to_location" style="@style/regularFont.NormalText"/>
    <TextView android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/cab_icon" android:layout_below="@+id/to_location" android:alpha="0.6" style="@style/regularFont.NormalText.BlackColor"/>
</RelativeLayout>
