<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/favorite_selector" android:paddingLeft="12dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/app_details" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
        <ImageView android:id="@+id/app_logo" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginLeft="4dp" android:src="@drawable/logo_chalo" android:layout_centerVertical="true" android:layout_marginStart="4dp" android:layout_marginEnd="8dp"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/app_desc_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/app_logo" android:layout_centerVertical="true">
            <TextView android:textSize="16dp" android:textColor="@color/black_87" android:gravity="center" android:id="@+id/app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:text="@string/agency" android:layout_toRightOf="@+id/app_logo" style="@style/mediumFont"/>
            <TextView android:textSize="12sp" android:textColor="#66000000" android:id="@+id/desc" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="4dp" android:layout_marginRight="16dp" android:text="@string/agency" android:layout_toRightOf="@+id/app_logo" android:layout_below="@+id/app_name" android:layout_centerVertical="true" style="@style/regularFont"/>
        </LinearLayout>
        <TextView android:textSize="11sp" android:textColor="@color/white" android:id="@+id/label" android:background="@drawable/orange_rectangle_drawable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New" android:layout_alignTop="@+id/app_name" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true" style="@style/mediumFont"/>
    </RelativeLayout>
    <TextView android:textSize="12dp" android:textColor="@color/dark_red_color" android:id="@+id/payment_mode_error" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_marginBottom="12dp" android:text="@string/payment_issue" android:layout_below="@+id/app_details" android:layout_alignLeft="@+id/app_logo" style="@style/regularFont"/>
</RelativeLayout>
