<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/today_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/pass_punches_info" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:minWidth="32dp" android:text="21 May 2016" android:maxLines="2" android:singleLine="false" android:layout_weight="1"/>
        <RadioGroup android:layout_gravity="right" android:orientation="horizontal" android:id="@+id/punch_direction_radio" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RadioButton android:theme="@style/ZophopThemeLolipop.ActionBarToolBar.RadioButton" android:textSize="18dp" android:textColor="#de000000" android:ellipsize="end" android:id="@+id/radio_punch_up" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:text="UP" android:singleLine="true" android:layout_weight="1" style="@style/regularFont"/>
            <RadioButton android:theme="@style/ZophopThemeLolipop.ActionBarToolBar.RadioButton" android:textSize="18dp" android:textColor="#de000000" android:ellipsize="end" android:id="@+id/radio_punch_down" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:text="DOWN" android:singleLine="true" android:layout_weight="1" style="@style/regularFont"/>
        </RadioGroup>
    </LinearLayout>
</androidx.cardview.widget.CardView>
