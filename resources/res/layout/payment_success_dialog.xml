<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#f5f5f5" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="16dp">
        <ImageView android:layout_gravity="center" android:layout_width="54dp" android:layout_height="54dp" android:src="@drawable/acknowledgement_pass_ticket"/>
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Headline" android:textSize="20sp" android:textColor="#de000000" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/booking_successful" android:textAlignment="center" style="@style/boldFont"/>
        <TextView android:textSize="14sp" android:textColor="#607d8b" android:gravity="center" android:id="@+id/see_booking_details" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/see_booking_details" android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="12dp" android:elevation="4dp">
        <TextView android:textSize="16sp" android:textColor="#de000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16sp" android:layout_marginTop="24dp" android:text="@string/next_steps" style="@style/mediumFont"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="24dp">
            <TextView android:textSize="18sp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="top" android:background="@drawable/grey_circle" android:layout_width="33dp" android:layout_height="33dp" android:text="1" style="@style/mediumFont"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp">
                <TextView android:textSize="16sp" android:textColor="#de000000" android:gravity="left" android:id="@+id/activate_tkt_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="@string/first_step_header" android:textAlignment="center" style="@style/mediumFont"/>
                <TextView android:textSize="14sp" android:textColor="#b3000000" android:gravity="left" android:id="@+id/activate_tkt_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:text="@string/first_step_desc" android:textAlignment="center" style="@style/regularFont"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="24dp">
            <TextView android:textSize="18sp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="top" android:background="@drawable/grey_circle" android:layout_width="33dp" android:layout_height="33dp" android:text="2" style="@style/mediumFont"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24dp">
                <TextView android:textSize="16sp" android:textColor="#de000000" android:gravity="left" android:id="@+id/conductor_verification_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="@string/second_step_header" android:textAlignment="center" style="@style/mediumFont"/>
                <TextView android:textSize="14sp" android:textColor="#b3000000" android:gravity="left" android:id="@+id/conductor_verification_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:text="@string/second_step_desc" android:textAlignment="center" style="@style/regularFont"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/use_ticket" android:background="@drawable/orange_rounded_button" android:padding="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="24dp" android:layout_marginRight="16dp" android:text="@string/use_ticket" android:layout_below="@+id/section_status" android:layout_alignParentBottom="true" style="@style/mediumFont"/>
        <TextView android:textSize="14sp" android:textColor="#607d8b" android:gravity="center" android:id="@+id/use_later" android:background="@drawable/grey_rounded_button" android:padding="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="16dp" android:text="@string/later_caps" style="@style/mediumFont"/>
    </LinearLayout>
</LinearLayout>
