        <TextView android:textSize="14dp" android:textColor="@color/black_60" android:gravity="center_horizontal" android:id="@+id/autosubscribe_dialog_body" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/auto_subscription_body" style="@style/regularFont"/>
