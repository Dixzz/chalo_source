<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingLeft="24dp" android:paddingTop="24dp" android:paddingRight="16dp" android:paddingBottom="8dp" android:layout_width="312dp" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/view_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textColor="@color/black_87" android:id="@+id/dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginBottom="16dp" android:text="@string/recent_products_disabled_dialog_title" style="@style/mediumFont"/>
            <TextView android:textSize="16sp" android:textColor="@color/black_87" android:id="@+id/error_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginBottom="20dp" android:text="@string/recent_products_disabled_dialog_copy" style="@style/regularFont"/>
        </LinearLayout>
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:layout_gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textSize="14dp" android:textColor="@color/black_87" android:id="@+id/dismiss_button" android:background="@drawable/drawer_item_selector" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:text="@string/dismiss_caps" style="@style/mediumFont"/>
            <TextView android:textSize="14dp" android:textColor="@color/loader_color" android:id="@+id/okay_button" android:background="@drawable/drawer_item_selector" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/okay" style="@style/mediumFont"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
