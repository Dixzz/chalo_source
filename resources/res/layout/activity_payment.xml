<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/orange_primary" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/main_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="100dp" android:layout_marginRight="20dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="110dp">
                <LinearLayout android:gravity="center" android:background="#e2e2e2" android:layout_width="match_parent" android:layout_height="80dp" android:layout_alignParentBottom="true">
                    <TextView android:textSize="12sp" android:paddingTop="35dp" android:paddingBottom="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Order #RZP42"/>
                </LinearLayout>
                <ImageView android:background="#ffffff" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/rzp" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:background="#f2f2f2" android:paddingTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20sp" android:layout_gravity="center_horizontal" android:paddingTop="0dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Razorpay T-Shirt"/>
                <TextView android:textSize="12sp" android:layout_gravity="center_horizontal" android:paddingTop="0dp" android:paddingBottom="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="INR 1.00"/>
                <TextView android:textSize="12sp" android:textStyle="italic" android:layout_gravity="center_horizontal" android:paddingTop="5dp" android:paddingBottom="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="This is a real transaction"/>
                <Button android:textSize="14sp" android:textColor="#fcfcfc" android:layout_gravity="center_horizontal" android:id="@+id/btn_pay" android:background="@drawable/green_button" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="wrap_content" android:layout_height="36dp" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" android:text="Purchase"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textStyle="italic" android:textColor="#a1ddee" android:background="@drawable/secured_by_bg" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Secure Payments by Razorpay"/>
        </LinearLayout>
        <WebView android:gravity="center" android:id="@+id/payment_webview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
    </FrameLayout>
</RelativeLayout>
