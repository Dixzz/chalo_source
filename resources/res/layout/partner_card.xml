<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:background="@drawable/favorite_selector" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="14dp" android:textColor="@color/black_60" android:id="@+id/banner_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/partner_title" style="@style/regularFont"/>
        <TextView android:textSize="18dp" android:textColor="@color/black_87" android:id="@+id/banner_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/partner_description" android:layout_below="@+id/banner_title" style="@style/mediumFont"/>
        <TextView android:textSize="16dp" android:textColor="@color/chalo_primary" android:gravity="end" android:id="@+id/dismiss" android:background="@drawable/drawer_item_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Dismiss" android:layout_toLeftOf="@+id/learn_more" android:layout_below="@+id/banner_description" android:fontFamily="@string/font_medium"/>
        <TextView android:textSize="16dp" android:textColor="@color/chalo_primary" android:gravity="end" android:id="@+id/learn_more" android:background="@drawable/drawer_item_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="16dp" android:text="Learn more" android:layout_below="@+id/banner_description" android:fontFamily="@string/font_medium" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
