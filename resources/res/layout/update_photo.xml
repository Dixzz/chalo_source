<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingLeft="16dp" android:paddingTop="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textColor="#66000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:text="Current Pass Photo" style="@style/regularFont.NormalText"/>
    <RelativeLayout android:id="@+id/pass_container" android:background="@drawable/drawer_pressed_border" android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
        <TextView android:gravity="center" android:layout_width="match_parent" android:layout_height="48dp" android:text="Upload Photo"/>
    </RelativeLayout>
    <View android:id="@+id/header_separator" android:background="@color/scheduler_input_divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="12dp" android:layout_marginBottom="4dp"/>
</LinearLayout>
