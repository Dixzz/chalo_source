<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/reclaim_passes_view_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:id="@+id/reclaim_passes_card_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp">
        <LinearLayout android:orientation="vertical" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18dp" android:textColor="@color/black_87" android:id="@+id/reclaim_passes_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="@string/title_reclaim_pass_card" style="@style/mediumFont"/>
            <TextView android:textColor="@color/black_60" android:id="@+id/reclaim_passes_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/reclaim_passes_info" style="@style/regularFont.NormalText"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="14dp" android:textColor="@color/chalo_primary" android:gravity="end" android:id="@+id/dismiss_reclaim_passes" android:background="@drawable/drawer_item_selector" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DISMISS" android:layout_toLeftOf="@+id/btn_reclaim_passes" style="@style/mediumFont"/>
                <TextView android:textSize="14dp" android:textColor="@color/chalo_primary" android:gravity="end" android:id="@+id/btn_reclaim_passes" android:background="@drawable/drawer_item_selector" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:text="RECLAIM" android:layout_alignParentEnd="true" style="@style/mediumFont"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
