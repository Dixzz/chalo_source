<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/pass_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/pass_fare_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <TextView android:textSize="18dp" android:textColor="#de000000" android:id="@+id/pass_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="@string/next" android:layout_alignParentEnd="true" style="@style/mediumFont"/>
        <TextView android:textSize="14dp" android:textColor="@color/orange_primary" android:id="@+id/discount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="12dp" android:text="10% OFF" android:layout_below="@+id/pass_fare" android:layout_alignParentEnd="true" style="@style/mediumFont"/>
        <TextView android:textSize="14dp" android:textColor="@color/black_87" android:id="@+id/actual_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100" android:layout_toLeftOf="@+id/discount" android:layout_below="@+id/pass_fare" style="@style/mediumFont"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/pass_radio_button_layout" android:paddingLeft="14dp" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_toLeftOf="@+id/actual_price" android:layout_alignParentStart="true">
        <RadioButton android:theme="@style/ZophopThemeLolipop.ActionBarToolBar.RadioButton" android:textSize="18dp" android:textColor="#de000000" android:id="@+id/pass_radio_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_alignParentLeft="true" style="@style/regularFont"/>
        <TextView android:textSize="18dp" android:textColor="#de000000" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/pass_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100 " android:maxLines="1" android:layout_toRightOf="@+id/pass_radio_button" android:layout_centerVertical="true" android:layout_alignParentEnd="false" style="@style/mediumFont"/>
    </RelativeLayout>
    <View android:background="@color/scheduler_input_divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/pass_radio_button_layout" android:layout_alignParentEnd="true"/>
</RelativeLayout>
