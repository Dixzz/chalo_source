<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:orientation="vertical" android:paddingBottom="140dp" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="20sp" android:textColor="@color/black_87" android:id="@+id/title_text" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/confirmation_fragment_title_submit_proofs" app:layout_constraintEnd_toStartOf="@+id/guideline_right" app:layout_constraintStart_toStartOf="@+id/guideline_left" app:layout_constraintTop_toTopOf="0" style="@style/boldFont"/>
            <TextView android:textSize="18sp" android:textColor="@color/black_87" android:id="@+id/user_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="TextView" app:layout_constraintEnd_toEndOf="0" app:layout_constraintHorizontal_bias="0" app:layout_constraintStart_toStartOf="@+id/guideline_left" app:layout_constraintTop_toBottomOf="@+id/title_text" style="@style/mediumFont"/>
            <androidx.constraintlayout.widget.Guideline android:orientation="vertical" android:id="@+id/guideline_left" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintGuide_begin="16dp"/>
            <androidx.constraintlayout.widget.Guideline android:orientation="vertical" android:id="@+id/guideline_right" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintGuide_end="16dp"/>
            <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal" android:id="@+id/uploaded_proofs_recycler_view" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/guideline_right" app:layout_constraintStart_toStartOf="@+id/guideline_left" app:layout_constraintTop_toBottomOf="@+id/user_name"/>
            <LinearLayout android:id="@+id/component_divider_1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/uploaded_proofs_recycler_view">
                <include layout="@layout/component_divider_thick_layout"/>
            </LinearLayout>
            <TextView android:textSize="18sp" android:textColor="@color/black_87" android:id="@+id/product_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="Magic Pass" app:layout_constraintEnd_toStartOf="@+id/guideline_right" app:layout_constraintStart_toStartOf="@+id/guideline_left" app:layout_constraintTop_toBottomOf="@+id/component_divider_1" style="@style/mediumFont"/>
            <TextView android:textSize="14sp" android:textColor="@color/black_70" android:id="@+id/ride_details" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/dummy_copy" app:layout_constraintEnd_toStartOf="@+id/guideline_right" app:layout_constraintStart_toStartOf="@+id/guideline_left" app:layout_constraintTop_toBottomOf="@+id/product_name" style="@style/regularFont"/>
            <TextView android:textSize="14sp" android:textColor="@color/black_70" android:id="@+id/subcategory_info_note" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/dummy_copy" app:layout_constraintEnd_toStartOf="@+id/guideline_right" app:layout_constraintStart_toStartOf="@+id/guideline_left" app:layout_constraintTop_toBottomOf="@+id/ride_details" style="@style/regularFont"/>
            <TextView android:textSize="14sp" android:textColor="@color/black_70" android:id="@+id/product_duration_category_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/dummy_copy" app:layout_constraintEnd_toStartOf="@+id/guideline_right" app:layout_constraintStart_toStartOf="@+id/guideline_left" app:layout_constraintTop_toBottomOf="@+id/subcategory_info_note" style="@style/regularFont"/>
            <TextView android:textSize="16sp" android:textColor="@color/black_87" android:id="@+id/pass_start_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/start_date" app:layout_constraintEnd_toStartOf="@+id/guideline_right" app:layout_constraintHorizontal_bias="0" app:layout_constraintStart_toStartOf="@+id/guideline_left" app:layout_constraintTop_toBottomOf="@+id/product_duration_category_name" style="@style/mediumFont"/>
            <TextView android:textSize="14sp" android:textColor="@color/chalo_primary" android:id="@+id/edit_pass_start_date" android:background="@drawable/drawer_item_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/change_date" app:layout_constraintBottom_toBottomOf="@+id/pass_start_date" app:layout_constraintStart_toEndOf="@+id/pass_start_date" app:layout_constraintTop_toTopOf="@+id/pass_start_date" style="@style/regularFont"/>
            <LinearLayout android:id="@+id/component_divider_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/pass_start_date">
                <include layout="@layout/component_divider_thick_layout"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/fare_details_layout" android:background="@drawable/drawer_item_selector" android:paddingLeft="16dp" android:paddingTop="24dp" android:paddingRight="16dp" android:paddingBottom="24dp" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/component_divider_2">
                <LinearLayout android:orientation="horizontal" android:id="@+id/fare_split_title" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="18sp" android:textColor="@color/black_87" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/fare_split" android:includeFontPadding="false" android:layout_weight="1" style="@style/mediumFont"/>
                    <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/btn_expand_fare_split" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_expand_arrow"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/fare_split_layout" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/component_divider_3" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/fare_details_layout">
                <include layout="@layout/component_divider_thick_layout"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <View android:background="@drawable/bottomsheet_shadow" android:layout_width="match_parent" android:layout_height="6dp" android:layout_above="@+id/bottom_sheet_confirm" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/bottom_sheet_confirm" android:background="@color/white" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp">
            <TextView android:textSize="18sp" android:textColor="@color/black_87" android:gravity="center_vertical" android:id="@+id/activation_text" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Total Amount" android:layout_weight="1" style="@style/mediumFont"/>
            <TextView android:textSize="18sp" android:textColor="@color/black_87" android:layout_gravity="center_vertical" android:id="@+id/bottomsheet_fare_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="320" style="@style/mediumFont"/>
        </LinearLayout>
        <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/btn_submit" android:background="@drawable/activate_button" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/next" style="@style/mediumFont"/>
    </LinearLayout>
</RelativeLayout>
