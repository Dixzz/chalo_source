<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/drawer_item_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textColor="#66000000" android:id="@+id/field_description" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="12dp" android:text="testinsjdsahdgsauc" android:layout_alignParentTop="true" style="@style/regularFont"/>
    <TextView android:textColor="@color/home_screen_header_color" android:id="@+id/change_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginRight="16dp" android:text="@string/change_pass" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/duration_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_below="@+id/field_description"/>
    <RelativeLayout android:id="@+id/input_container" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_toRightOf="@+id/agency_logo" android:layout_below="@+id/field_description" android:layout_alignParentLeft="true">
        <LinearLayout android:id="@+id/input_edit" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <EditText android:background="@null" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="Anuja" android:singleLine="true" android:layout_alignParentLeft="true" style="@style/form_input_pass_duration"/>
        </LinearLayout>
        <TextView android:textSize="14dp" android:id="@+id/input_edit_bottom" android:background="@null" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:text="Anuja" android:singleLine="true" android:layout_below="@+id/input_edit" android:layout_alignParentLeft="true" style="@style/regularFont"/>
        <View android:id="@+id/header_separator" android:background="@color/scheduler_input_divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="12dp" android:layout_below="@+id/input_edit_bottom"/>
        <TextView android:textSize="12dp" android:textColor="@color/dark_red_color" android:id="@+id/status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="2dp" android:text="Please enter route number" android:layout_below="@+id/header_separator"/>
    </RelativeLayout>
    <View android:id="@+id/bottom_seperator" android:background="@color/scheduler_input_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/duration_container"/>
</RelativeLayout>
