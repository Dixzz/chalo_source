<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/card" android:background="@drawable/drawer_item_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/main_content_view" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.7">
            <ImageView android:id="@+id/mode_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:src="@drawable/train_trip_planner" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:id="@+id/card_title_from" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/mode_icon" android:layout_alignParentTop="true" style="@style/card_item_station_live"/>
            <TextView android:textSize="18sp" android:layout_gravity="center_vertical" android:id="@+id/card_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:includeFontPadding="false" android:layout_toRightOf="@+id/mode_icon" android:layout_below="@+id/card_title_from" style="@style/card_item_station_live_card_title"/>
        </RelativeLayout>
        <TextView android:textSize="18dp" android:textColor="@color/eta_blue" android:id="@+id/card_timing" android:layout_width="wrap_content" android:layout_height="wrap_content" android:alpha="1" fontPath="fonts/NotoSans-SemiBold.ttf"/>
    </LinearLayout>
    <TextView android:textSize="14dp" android:textColor="@color/black" android:id="@+id/next_station_name" android:paddingLeft="56dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/agency_name" android:paddingLeft="56dp" android:paddingTop="4dp" android:paddingRight="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:alpha="0.54" style="@style/regularFont.NormalText.BlackColor"/>
    <View android:id="@+id/divider" android:background="@color/black" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="16dp" android:alpha="0.12"/>
</LinearLayout>
