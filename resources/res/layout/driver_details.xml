<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/white" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/driver_eta_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="New Text" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
    <TextView android:textSize="12dp" android:textColor="@color/action_bar_color" android:id="@+id/driver_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Arriving" android:layout_below="@+id/driver_eta_text" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" fontPath="@string/font_medium"/>
    <RelativeLayout android:id="@+id/photo_container" android:background="@drawable/driver_background" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView android:textSize="18dp" android:id="@+id/driver_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:layout_marginBottom="4dp" android:text="Varun Dhawan" android:layout_toLeftOf="@+id/driver_eta_text" android:layout_toRightOf="@+id/photo_container" android:alpha="0.87" style="@style/mediumFont.LargeText.BlackColor"/>
    <TextView android:id="@+id/vehicle_identifier" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:layout_marginBottom="4dp" android:text="White Sedan" android:layout_toLeftOf="@+id/driver_eta_text" android:layout_toRightOf="@+id/photo_container" android:layout_below="@+id/driver_name" android:alpha="0.87" style="@style/regularFont.NormalText.BlackColor"/>
    <TextView android:id="@+id/vehicle_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:layout_marginBottom="4dp" android:text="MH 02 CB 1234" android:layout_toLeftOf="@+id/driver_eta_text" android:layout_toRightOf="@+id/photo_container" android:layout_below="@+id/vehicle_identifier" android:alpha="0.87" style="@style/regularFont.NormalText.BlackColor"/>
    <RatingBar android:id="@+id/driver_rating_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:max="5" android:numStars="5" android:rating="1.5" android:stepSize="0.1" android:isIndicator="true" android:layout_toRightOf="@+id/photo_container" android:layout_below="@+id/vehicle_number" android:progressTint="#ff9800" android:indeterminateTint="#ff9800" style="?android:attr/ratingBarStyleSmall"/>
    <TextView android:id="@+id/driver_rating" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:text="3/5" android:layout_toLeftOf="@+id/driver_eta_text" android:layout_toRightOf="@+id/driver_rating_indicator" android:layout_below="@+id/vehicle_number" android:alpha="0.87" style="@style/regularFont.NormalText.BlackColor"/>
</RelativeLayout>
