<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ProgressBar android:id="@+id/freshchat_activity_conversation_detail_progressbar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:layout_centerInParent="true"/>
    <RelativeLayout android:id="@+id/freshchat_activity_conversation_detail_content" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/freshchat_conversation_banner_message_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/freshchat_partial_conversation_banner_message"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/freshchat_message_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/freshchat_conv_detail_divider" android:layout_below="@+id/freshchat_conversation_banner_message_text">
            <include android:id="@+id/freshchat_conversation_meeting_banner" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" layout="@layout/freshchat_calendar_meeting_banner"/>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/freshchat_conv_detail_list" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" style="?attr/freshchatMessageListStyle"/>
            <ScrollView android:id="@+id/freshchat_quick_reply_container" android:background="?attr/freshchatQuickReplyViewBgColor" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="@dimen/freshchat_message_composer_elevation">
                <com.freshchat.consumer.sdk.ui.FlowLayout android:id="@+id/freshchat_quick_reply_flowlayout" android:paddingLeft="16dp" android:paddingTop="8dp" android:paddingRight="16dp" android:paddingBottom="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:paddingStart="16dp" android:paddingEnd="16dp" app:freshchatFlChildSpacing="@dimen/freshchat_quick_reply_view_row_padding" app:freshchatFlChildSpacingForLastRow="-65537" app:freshchatFlRowSpacing="@dimen/freshchat_quick_reply_view_column_padding"/>
            </ScrollView>
        </LinearLayout>
        <View android:id="@+id/freshchat_conv_detail_divider" android:background="@color/freshchat_message_list_reply_view_divider" android:layout_width="match_parent" android:layout_height="1dp" android:layout_above="@+id/freshchat_conv_detail_text_reply_layout" android:layout_alignWithParentIfMissing="true"/>
        <include android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/freshchat_conv_detail_voice_reply_layout" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignWithParentIfMissing="true" android:layout_alignParentStart="true" android:layout_alignParentEnd="true" layout="@layout/freshchat_partial_text_message_frame"/>
        <include android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/freshchat_chat_resolution_confirmation_layout" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_alignParentStart="true" android:layout_alignParentEnd="true" layout="@layout/freshchat_partial_voice_message_frame"/>
        <include android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/freshchat_drop_down_input_frame" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_alignParentStart="true" android:layout_alignParentEnd="true" layout="@layout/freshchat_partial_chat_resolution_confirmation_frame"/>
        <include android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_alignParentStart="true" layout="@layout/freshchat_drop_down_input"/>
        <include android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_alignParentStart="true" layout="@layout/freshchat_drop_down_list"/>
    </RelativeLayout>
</RelativeLayout>
