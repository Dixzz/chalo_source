<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/confirmation_dialog" android:paddingLeft="24dp" android:paddingTop="24dp" android:paddingRight="16dp" android:paddingBottom="8dp" android:layout_width="312dp" android:layout_height="wrap_content">
        <TextView android:textSize="20dp" android:textColor="@color/black" android:id="@+id/title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" fontPath="fonts/NotoSans-SemiBold.ttf"/>
        <TextView android:textColor="@color/black" android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/next" android:lineSpacingExtra="3dp" android:alpha="0.87" style="@style/regularFont"/>
        <app.zophop.ui.views.OrderedBulletTextList android:entries="@array/kochi_beta_instructions" android:id="@+id/list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textColor="@color/black" android:id="@+id/message_end" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="8dp" android:layout_marginBottom="20dp" android:text="@string/beta_kochi_footer" android:lineSpacingExtra="3dp" android:alpha="0.87" style="@style/regularFont"/>
        <LinearLayout android:gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textColor="@color/black" android:id="@+id/negative" android:background="@drawable/drawer_item_selector" android:padding="8dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24dp" android:text="@string/cancel" android:lineSpacingExtra="1dp" android:alpha="0.87" style="@style/mediumFont.NormalText.BlackColor"/>
            <TextView android:textColor="@color/orange_primary" android:id="@+id/positive" android:background="@drawable/drawer_item_selector" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="YES" style="@style/mediumFont.NormalText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
