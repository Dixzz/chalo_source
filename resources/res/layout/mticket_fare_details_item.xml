<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/passenger_fare_details_item" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="@color/black_60" android:id="@+id/tv_passenger_type" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/regularFont.NormalText"/>
        <TextView android:textColor="@color/black_60" android:id="@+id/tv_passenger_count" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_weight="1" style="@style/regularFont.NormalText"/>
        <TextView android:textColor="@color/black_60" android:id="@+id/tv_passenger_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="450" style="@style/regularFont.NormalText"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/detailed_fare_breakage" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/mticket_fare_detailed_breakdown"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/passenger_discount_fare_details_item" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/passenger_total_fare_details_item" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
        <TextView android:textSize="18dp" android:textColor="@color/black_87" android:id="@+id/tv_total_amount" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/mticket_total_amount" android:layout_weight="1" android:fontFamily="@string/font_bold" style="@style/mediumFont"/>
        <TextView android:textSize="18dp" android:textColor="@color/black_87" android:id="@+id/tv_total_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="450" android:fontFamily="@string/font_bold" style="@style/mediumFont"/>
    </LinearLayout>
</LinearLayout>
