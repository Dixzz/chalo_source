<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/loader_fragment" android:background="@color/white" android:paddingLeft="24dp" android:paddingTop="24dp" android:paddingRight="24dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/loader_title" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Please Wait..." android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:alpha="0.87" fontPath="@string/font_medium"/>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/loader_container" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/loader_title">
        <app.zophop.ui.views.summary_card.LoaderView android:id="@+id/loading_spinner" android:visibility="gone" android:layout_width="@dimen/loader_width" android:layout_height="@dimen/loader_height" android:layout_alignParentLeft="true"/>
        <TextView android:id="@+id/dialog_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="32dp" android:text="Requesting.." android:layout_toRightOf="@+id/loading_spinner"/>
    </LinearLayout>
    <TextView android:textSize="14dp" android:textColor="@color/orange_primary" android:gravity="center" android:id="@+id/btn_negative_action" android:background="@drawable/drawer_item_selector" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="48dp" android:text="Cancel Payment" android:layout_toLeftOf="@+id/btn_positive_action" android:layout_below="@+id/loader_container" fontPath="@string/font_medium"/>
    <TextView android:textSize="14dp" android:textColor="@color/orange_primary" android:gravity="center" android:id="@+id/btn_positive_action" android:background="@drawable/drawer_item_selector" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_marginLeft="15dp" android:text="CANCEL" android:layout_below="@+id/loader_container" android:layout_alignRight="@+id/loader_container" android:layout_alignEnd="@+id/loader_container" fontPath="@string/font_medium"/>
</RelativeLayout>
