<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/drawer_item_selector" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
        <TextView android:textSize="18dp" android:textColor="#7e000000" android:id="@+id/field_description" android:paddingTop="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/regularFont"/>
        <TextView android:textColor="#7e000000" android:id="@+id/field_description_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:drawablePadding="4dp" style="@style/regularFont"/>
        <TextView android:textColor="#de000000" android:id="@+id/input" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="1" android:drawablePadding="4dp" style="@style/mediumFont"/>
    </LinearLayout>
    <View android:id="@+id/header_separator" android:background="@color/black_20" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="12dp" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="12dp" android:textColor="@color/dark_red_color" android:id="@+id/status" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp"/>
</LinearLayout>
