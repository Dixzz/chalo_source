<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@drawable/favorite_selector" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/fav_options_container">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="24dp" android:layout_height="match_parent">
                <View android:layout_gravity="center_horizontal" android:layout_width="1dp" android:layout_height="0dp" android:layout_weight="1"/>
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/universal_from_image" android:layout_width="10dp" android:layout_height="10dp" android:src="@drawable/scheduler_input_circle_from" android:layout_centerVertical="true"/>
                <View android:layout_gravity="center_horizontal" android:background="@color/scheduler_input_divider" android:layout_width="1dp" android:layout_height="0dp" android:layout_weight="1"/>
            </LinearLayout>
            <TextView android:id="@+id/from_location" style="@style/universal_trip_stop_style"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="24dp" android:layout_height="match_parent">
                <View android:layout_gravity="center_horizontal" android:background="@color/scheduler_input_divider" android:layout_width="1dp" android:layout_height="0dp" android:layout_weight="1"/>
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/universal_from_image" android:layout_width="10dp" android:layout_height="10dp" android:src="@drawable/scheduler_input_circle_to" android:layout_centerVertical="true"/>
                <View android:layout_gravity="center_horizontal" android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
            </LinearLayout>
            <TextView android:id="@+id/to_location" style="@style/universal_trip_stop_style"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/fav_options_container" android:background="@drawable/drawer_item_selector" android:paddingLeft="8dp" android:paddingTop="16dp" android:paddingRight="8dp" android:paddingBottom="16dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/fav_options" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/favorite_overflow"/>
    </RelativeLayout>
</RelativeLayout>
